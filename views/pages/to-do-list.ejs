<h2>Your Tasks</h2>

<ul class="todo-list">
  <% items.forEach(item => { %>
  <li class="todo-item">



    <form action="/update/<%= item._id %>" method="POST" class="inline-form">
      <input type="hidden" name="_method" value="PATCH" />

  
<div class="task-content">
  <label for="title-<%= item._id %>">Title</label>
  <input id="title-<%= item._id %>" name="title" type="text" value="<%= item.title %>" required />

  <label for="description-<%= item._id %>">Description</label>
  <textarea id="description-<%= item._id %>" name="description" required><%= item.description %></textarea>
</div>
      <div class="task-actions">
        <button type="submit" class="btn-update">Update</button>
      </div>
    </form>




    <form action="/delete/<%= item._id %>" method="POST" class="inline-form">
      <input type="hidden" name="_method" value="DELETE" />
      <button type="submit" class="btn-delete">Delete</button>
    </form>
  </li>
  <% }); %>
</ul>

<!-- Add New Task Form -->
<form action="/add" method="POST" class="todo-form">
  <input type="text" name="title" placeholder="Task title" required />
  <textarea name="description" placeholder="Description" required></textarea>
  <button type="submit">Add Task</button>
</form>
